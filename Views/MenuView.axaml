<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:AvaloniaTerminal.ViewModels"
             xmlns:i="using:Avalonia.Xaml.Interactivity"
             xmlns:ia="using:Avalonia.Xaml.Interactions.Core"
             
             mc:Ignorable="d" d:DesignWidth="3000" d:DesignHeight="4000"
             x:Class="AvaloniaTerminal.Views.MenuView">
    
    <UserControl.Styles>
        
        <!--<Style Selector="Border.Card:pointerover">
            <Setter Property="Background" Value="{DynamicResource ThemeBackgroundColor}" />
        </Style>-->
       
        <Style Selector="Svg">
            <Setter Property="Height" Value="500"/>
            <Setter Property="Width" Value="600"/>
        </Style>
        
        <Style Selector="Border.Card">
            <Setter Property="CornerRadius" Value="12"/>
        </Style>

        <Style Selector="TextBlock.Heading">
            <Setter Property="TextAlignment" Value="Center"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="FontSize" Value="42"/>
            <Setter Property="FontWeight" Value="Black"/>
        </Style>
        
        <Style Selector="TextBlock.Caption">
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="TextAlignment" Value="Center"/>
        </Style>

        <Style Selector="Border">
            <Setter Property="BoxShadow" Value="3 3 10 2 #BDBDBD"/>
            <Setter Property="MinHeight" Value="400"/>
            <Setter Property="MinWidth" Value="400"/>
            <Setter Property="Padding" Value="10"/>
        </Style>
        
    </UserControl.Styles>
    
    <Design.DataContext>
        <vm:MenuViewModel/>
    </Design.DataContext>
    <Grid 
        RowDefinitions="130, *">
		<StackPanel 
			Orientation="Horizontal"
			Grid.Row="0">
			<Image
			   Margin="20"	
			   Height="100"
			   Width="100"
			   VerticalAlignment="Center"
			   HorizontalAlignment="Right"
			   Source="/Assets/lgpu.png"/>
			<TextBlock
					FontSize="46"
					Grid.Column="1"
					Grid.Row="0"
					VerticalAlignment="Center"
					Classes="Heading"
					Text="{Binding TitleHeader}"
            />
		</StackPanel>

		<TabControl Grid.Row="1">
        <TabItem>
            <TabItem.Header>
                <TextBlock 
                    Text="Институт/Факультет" 
                    FontWeight="Black"
                    FontSize="23" />
            </TabItem.Header>
            <ScrollViewer>
              <Grid 
            HorizontalAlignment="Center"
            RowDefinitions="Auto, Auto, Auto, *"
            ColumnDefinitions="*, * ">
 
		    <!-- ROW 1 -->
            <Border
                Name="Info"
                Margin=" 15 10 15 15"
                Grid.Row="0"
                Grid.Column="0"
                Classes="Card">
                <i:Interaction.Behaviors>
                    <ia:EventTriggerBehavior EventName="Tapped" SourceObject="{Binding #Info}">
                        <!--<ia:ChangePropertyAction PropertyName="Background"  Value="{DynamicResource ThemeBackgroundColor}" />-->
                        <ia:InvokeCommandAction Command="{Binding GetInfoView}"/>
                    </ia:EventTriggerBehavior>
                </i:Interaction.Behaviors>
                <StackPanel 
                    HorizontalAlignment="Center">
                    <Svg 
                        Path="/Assets/question.svg"/>
                    <TextBlock 
                        Classes="Heading" 
                        Text="Общие сведения" />
                    <TextBlock 
                        Classes="Caption" 
                        Text="Подробнее..." />
                </StackPanel>
            </Border>

            <Border
                Margin="15 15 15 15"
                Grid.Row="0"
				Name="Director"
                Grid.Column="1"
                Classes="Card">
				<i:Interaction.Behaviors>
					<ia:EventTriggerBehavior EventName="Tapped" SourceObject="{Binding #Director}">
						<!--<ia:ChangePropertyAction PropertyName="Background"  Value="{DynamicResource ThemeBackgroundColor}" />-->
						<ia:InvokeCommandAction Command="{Binding GetDirectorsView}"/>
					</ia:EventTriggerBehavior>
				</i:Interaction.Behaviors>
                <StackPanel HorizontalAlignment="Center">
                    
                    <Svg 
                        Path="/Assets/user-group.svg"/>
                    <TextBlock Classes="Heading" 
                               Text="Руководство" />
                        <TextBlock Classes="Caption" 
                                   Text="Подробнее..." />
                </StackPanel>
            </Border>
		    <!-- END ROW 1 -->

		    <!-- ROW 2 -->
            <Border
				Name="Home"
                Margin="15 0 15 15"
                Grid.Row="1"
                Grid.Column="0"
                Classes="Card">
				<i:Interaction.Behaviors>
					<ia:EventTriggerBehavior EventName="Tapped" SourceObject="{Binding #Home}">
						<!--<ia:ChangePropertyAction PropertyName="Background"  Value="{DynamicResource ThemeBackgroundColor}" />-->
						<ia:InvokeCommandAction Command="{Binding GetStructuralView}"/>
					</ia:EventTriggerBehavior>
				</i:Interaction.Behaviors>
                <StackPanel HorizontalAlignment="Center">
                    <Svg 
                        Path="/Assets/home.svg"/>
                    <TextBlock Classes="Heading" 
                               Text="Структура" />
                    <TextBlock Classes="Caption" 
                               Text="Подробнее..." />
                </StackPanel>
            </Border>

            <Border
                Margin="15 0 15 15"
                Grid.Row="1"
                Grid.Column="1"
                Name="Table"
                Classes="Card">
                <i:Interaction.Behaviors>
                    <ia:EventTriggerBehavior EventName="Tapped" SourceObject="{Binding #Table}">
                        <!--<ia:ChangePropertyAction PropertyName="Background"  Value="{DynamicResource ThemeBackgroundColor}" />-->
                        <ia:InvokeCommandAction Command="{Binding GetTimeTableView}"/>
                    </ia:EventTriggerBehavior>
                </i:Interaction.Behaviors>
                <StackPanel HorizontalAlignment="Center">
                    <Svg 
                        Path="/Assets/table.svg"/>
                    <TextBlock Classes="Heading" 
                               Margin="0"
                               Text="Электронное" />
                    <TextBlock Classes="Heading" 
                               Margin="0"
                               Text="расписание" />
                    <TextBlock Classes="Caption" 
                               Text="Подробнее..." />
                  
                </StackPanel>
            </Border>
            
		    <!-- END ROW 2 -->

		    <!-- ROW 3 -->


            <Border
                Name="Phone"
                Margin="15 0 15 15"
                Grid.Row="2"
                Grid.Column="0"
                Classes="Card">
                <i:Interaction.Behaviors>
                    <ia:EventTriggerBehavior EventName="Tapped" SourceObject="{Binding #Phone}">
                        <!--<ia:ChangePropertyAction PropertyName="Background"  Value="{DynamicResource ThemeBackgroundColor}" />-->
                        <ia:InvokeCommandAction Command="{Binding GetContactView}"/>
                    </ia:EventTriggerBehavior>
                </i:Interaction.Behaviors>
                <StackPanel HorizontalAlignment="Center">
                    <Svg 
                        Path="/Assets/phone.svg"/>
                    <TextBlock Classes="Heading" 
                               Margin="0"
                               Text="Контактная" />
                    <TextBlock Classes="Heading" 
                               Margin="0"
                               Text="информация" />
                    <TextBlock 
                        Classes="Caption" 
                        Text="Подробнее..." />
                    
                </StackPanel>
            </Border>
            
            <Border
                Name="Notice"
                Margin="15 0 15 15"
                Grid.Row="2"
                Grid.Column="1"
                Classes="Card">
                <i:Interaction.Behaviors>
                    <ia:EventTriggerBehavior EventName="Tapped" SourceObject="{Binding #Notice}">
                        <!--<ia:ChangePropertyAction PropertyName="Background"  Value="{DynamicResource ThemeBackgroundColor}" />-->
                        <ia:InvokeCommandAction Command="{Binding GetNoticeView}"/>
                    </ia:EventTriggerBehavior>
                </i:Interaction.Behaviors>
                <StackPanel HorizontalAlignment="Center">
                    <Svg 
                        Path="/Assets/information.svg"/>
                    <TextBlock Classes="Heading" 
                               Text="Объявления" />
                    <TextBlock Classes="Caption" 
                               Text="Подробнее..." />
                   
                </StackPanel>
            </Border>

		    <!-- END ROW 3 -->
            
        </Grid>       
            </ScrollViewer>
          
        </TabItem>
        <TabItem >
            <TabItem.Header>
                <TextBlock 
                    Text="Университет" 
                    FontSize="23" />
            </TabItem.Header>
               <ScrollViewer>
              <Grid 
            HorizontalAlignment="Center"
            RowDefinitions="Auto, Auto, Auto, *"
            ColumnDefinitions="*, * ">
 
		    <!-- ROW 1 -->
            <Border
                Name="InfoUniversity"
                Margin=" 15 10 15 15"
                Grid.Row="0"
                Grid.Column="0"
                Classes="Card">
                <i:Interaction.Behaviors>
                    <ia:EventTriggerBehavior EventName="Tapped" SourceObject="{Binding #InfoUniversity}">
                        <!--<ia:ChangePropertyAction PropertyName="Background"  Value="{DynamicResource ThemeBackgroundColor}" />-->
                        <ia:InvokeCommandAction Command="{Binding GetInfoViewUniversity}"/>
                    </ia:EventTriggerBehavior>
                </i:Interaction.Behaviors>
                <StackPanel 
                    HorizontalAlignment="Center">
                    <Svg 
                        Path="/Assets/question.svg"/>
                    <TextBlock 
                        Classes="Heading" 
                        Text="Общие сведения" />
                    <TextBlock 
                        Classes="Caption" 
                        Text="Подробнее..." />
                </StackPanel>
            </Border>

            <Border
                Margin="15 15 15 15"
                Grid.Row="0"
				Name="DirectorUniversity"
                Grid.Column="1"
                Classes="Card">
				<i:Interaction.Behaviors>
					<ia:EventTriggerBehavior EventName="Tapped" SourceObject="{Binding #DirectorUniversity}">
						<!--<ia:ChangePropertyAction PropertyName="Background"  Value="{DynamicResource ThemeBackgroundColor}" />-->
						<ia:InvokeCommandAction Command="{Binding GetDirectorsAllView}"/>
					</ia:EventTriggerBehavior>
				</i:Interaction.Behaviors>
                <StackPanel HorizontalAlignment="Center">
                    
                    <Svg 
                        Path="/Assets/user-group.svg"/>
                    <TextBlock Classes="Heading" 
                               Text="Руководство" />
                        <TextBlock Classes="Caption" 
                                   Text="Подробнее..." />
                </StackPanel>
            </Border>
		    <!-- END ROW 1 -->

		    <!-- ROW 2 -->
            <Border
				Name="HomeUniversity"
                Margin="15 0 15 15"
                Grid.Row="1"
                Grid.Column="0"
                Classes="Card">
				<i:Interaction.Behaviors>
					<ia:EventTriggerBehavior EventName="Tapped" SourceObject="{Binding #HomeUniversity}">
						<!--<ia:ChangePropertyAction PropertyName="Background"  Value="{DynamicResource ThemeBackgroundColor}" />-->
						<ia:InvokeCommandAction Command="{Binding GetStructuralUniversityView}"/>
					</ia:EventTriggerBehavior>
				</i:Interaction.Behaviors>
                <StackPanel HorizontalAlignment="Center">
                    <Svg 
                        Path="/Assets/home.svg"/>
                    <TextBlock Classes="Heading" 
                               Text="Структура" />
                    <TextBlock Classes="Caption" 
                               Text="Подробнее..." />
                </StackPanel>
            </Border>

            <!--<Border
                Margin="15 0 15 15"
                Grid.Row="1"
                Grid.Column="1"
                Classes="Card">
                <StackPanel HorizontalAlignment="Center">
                    <Svg 
                        Path="/Assets/table.svg"/>
                    <TextBlock Classes="Heading" 
                               Margin="0"
                               Text="Электронное" />
                    <TextBlock Classes="Heading" 
                               Margin="0"
                               Text="расписание" />
                    <TextBlock Classes="Caption" 
                               Text="Подробнее..." />
                  
                </StackPanel>
            </Border>-->
            
		    <!-- END ROW 2 -->

		    <!-- ROW 3 -->


            <Border
                Margin="15 0 15 15"
                Grid.Row="1"
                Grid.Column="1"
                Classes="Card">
                <StackPanel HorizontalAlignment="Center">
                    <Svg 
                        Path="/Assets/phone.svg"/>
                    <TextBlock Classes="Heading" 
                               Margin="0"
                               Text="Контактная" />
                    <TextBlock Classes="Heading" 
                               Margin="0"
                               Text="информация" />
                    <TextBlock 
                        Classes="Caption" 
                        Text="Подробнее..." />
                    
                </StackPanel>
            </Border>
            
            <!--<Border
                Margin="15 0 15 15"
                Grid.Row="2"
                Grid.Column="1"
                Classes="Card">
                <StackPanel HorizontalAlignment="Center">
                    <Svg 
                        Path="/Assets/information.svg"/>
                    <TextBlock Classes="Heading" 
                               Text="Объявления" />
                    <TextBlock Classes="Caption" 
                               Text="Подробнее..." />
                   
                </StackPanel>
            </Border>-->

		    <!-- END ROW 3 -->
            
        </Grid>       
            </ScrollViewer>
        </TabItem>
    </TabControl>        
    </Grid>

    
    
    
</UserControl>
